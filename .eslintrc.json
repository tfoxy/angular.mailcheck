{
  "extends": "eslint:recommended",
  "env": {
    "browser": true
  },
  "globals": {
    "angular": true,
    "Mailcheck": true
  },
  "rules": {
    "block-scoped-var": "error",
    "curly": "error",
    "eqeqeq": ["error", "smart"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-empty-function": "error",
    "no-implicit-globals": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}